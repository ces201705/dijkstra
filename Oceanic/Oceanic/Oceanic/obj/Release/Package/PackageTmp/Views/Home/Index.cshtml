@{
    ViewBag.Title = "";
}

<div class="jumbotron">
    <h1 style="text-align: center">Welcome to our brilliant solution. Oceanic Airlines: we deliver!</h1>
</div>

<div class="row" style="margin-bottom: 10%">
    <div class="col-md-6">
        <h2>Oceanic airlines</h2>
        <p>
            We are committed. That is why we are Africa´s most successful delivery company.
            A continuous series of high quality deliveries, on schedule and on budget, speaks for itself. 
        </p>
    </div>
    <div class="col-md-6" style="text-align: center">
        <img style="max-width: 100% !important" src="../images/oceanic.png" alt="Oceanic Airlines">
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <p style="font-size: xx-large">Do you want to send a parcel? Login here!</p>
    </div>
    <div class="col-md-4">
        <a>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-primary btn-lg" })</a>
    </div>
</div>